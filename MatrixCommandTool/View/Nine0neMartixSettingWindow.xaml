                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">

                                        <StackPanel
                                                    Orientation="Horizontal"
                                                    x:Name="bd"
                                                    Height="48"
                                                    Background="Transparent"
                                                    Cursor="Hand">
                                            <CheckBox   IsChecked="{Binding IsCheckChannel}"
                                                                x:Name="selectCommand"
                                                                Width="40"
                                                                Height="40"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Center"
                                                                Cursor="Hand"
                                                                Foreground="#C0C4CC"
                                                                Style="{StaticResource CheckBoxDefaultStyle}"/>
                                            <TextBlock
                                                                x:Name="txt_name"

                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                FontSize="16"
                                                                Foreground="Black"
                                                                Text="{Binding OnputChannel}" />
                                        </StackPanel>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                <Border Margin="12" Grid.Column="1" Background="Transparent"   Height="220">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel
                Margin="12"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                            <TextBlock Text="设置色调" 
                               Width="60"
                               Foreground="#FFFFFF"
                               Height="24"
                               FontSize="14"
                               TextAlignment="Center"/>
                            <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="#FFFFFF"
                        Margin="0 0 18 0"
                        Text="{Binding ElementName=colorslider_Scale, Path=Value, StringFormat={}{0}}" />
                            <Slider
                        x:Name="colorslider_Scale"
                        Width="250"
                        VerticalAlignment="Center"
                        IsMoveToPointEnabled="True"
                        IsSnapToTickEnabled="True"
                        Maximum="99"
                        Foreground="{DynamicResource SliderDefaultColor}"
                        Minimum="0"
                        SmallChange="1"  
                        PreviewMouseLeftButtonUp="colorslider_PreviewMouseDown"
                        Thumb.DragDelta="colorslider_DragDelta"/>
                        </StackPanel>

                        <StackPanel
                    Grid.Row="1"
                    Margin="12"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                            <TextBlock Text="对比度" 
                               Width="60"
                               Height="24"
                               FontSize="14"
                               Foreground="#FFFFFF"
                               TextAlignment="Center"/>
                            <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="#FFFFFF"
                        Margin="0 0 18 0"
                        Text="{Binding ElementName=slider_ScaleContrast, Path=Value, StringFormat={}{0}}" />

                            <Slider
                         Width="250"
                        x:Name="slider_ScaleContrast"
                        VerticalAlignment="Center"
                        IsMoveToPointEnabled="True"
                        IsSnapToTickEnabled="True"
                             Maximum="99"
                        Minimum="0"
                        Foreground="{DynamicResource SliderDefaultColor}"
                        SmallChange="1" 
                        Value="{Binding CurrentContrast}"
                        PreviewMouseLeftButtonUp="sliderContrast_PreviewMouseDown"
                        Thumb.DragDelta="slider_DragDeltaContrast"/>
                        </StackPanel>

                        <StackPanel
                    Grid.Row="2"
                    Margin="12"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                            <TextBlock Text="饱和度" 
                               Width="60"
                               Foreground="#FFFFFF"
                               Height="24"
                               FontSize="14"
                               TextAlignment="Center"/>
                            <TextBlock
                         HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="#FFFFFF"
                        Margin="0 0 18 0"
                        Text="{Binding ElementName=saturationslider_Scale, Path=Value, StringFormat={}{0}}" />

                            <Slider
                         Width="250"
                        x:Name="saturationslider_Scale"
                        VerticalAlignment="Center"
                        IsMoveToPointEnabled="True"
                        IsSnapToTickEnabled="True"
                             Maximum="99"
                        Foreground="{DynamicResource SliderDefaultColor}"
                        Minimum="0"
                        SmallChange="1" 
                        Value="{Binding CurrentSaturation}"
                        PreviewMouseLeftButtonUp="saturationslider_PreviewMouseDown"
                        Thumb.DragDelta="saturationslider_DragDelta"/>

                        </StackPanel>
                        <StackPanel
                    Grid.Row="3"
                    Margin="12"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                            <TextBlock Text="设置R值" 
                               Foreground="#FFFFFF"
                               Width="60"
                               Height="24"
                               FontSize="14"
                               TextAlignment="Center"/>
                            <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="#FFFFFF"
                        Margin="0 0 18 0"
                        Text="{Binding ElementName=rvalueslider_Scale, Path=Value, StringFormat={}{0}}" />

                            <Slider
                        x:Name="rvalueslider_Scale"
                         Width="250"
                        VerticalAlignment="Center"
                        IsMoveToPointEnabled="True"
                        IsSnapToTickEnabled="True"
                        Maximum="99"
                        Minimum="0"
                        Foreground="{DynamicResource SliderDefaultColor}"
                        SmallChange="1" 
                        Value="{Binding CurrentVolume}"
                        PreviewMouseLeftButtonUp="rvalueslider_PreviewMouseDown"
                        Thumb.DragDelta="rvalueslider_DragDelta"/>
                        </StackPanel>
                    </Grid>

                </Border>

                <Border  Margin="12" Grid.Column="2"   Height="200">
                    <Grid Margin="0,0,30,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel
                Margin="12"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                            <TextBlock Text="亮度" 
                               Width="60"
                               Foreground="#FFFFFF"
                               Height="24"
                               FontSize="14"
                               TextAlignment="Center"/>
                            <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="#FFFFFF"
                        Margin="0 0 18 0"
                        Text="{Binding ElementName=brightnessslider_Scale, Path=Value, StringFormat={}{0}}" />

                            <Slider
                        x:Name="brightnessslider_Scale"
                         Width="250"
                        VerticalAlignment="Center"
                        IsMoveToPointEnabled="True"
                        IsSnapToTickEnabled="True"
                        Maximum="99"
                        Foreground="{DynamicResource SliderDefaultColor}"
                        Minimum="0"
                        SmallChange="1" 
                        Value="{Binding CurrentBrightness}"
                        PreviewMouseLeftButtonUp="brightnessslider_PreviewMouseDown"
                        Thumb.DragDelta="brightnessslider_DragDelta"/>
                        </StackPanel>

                        <StackPanel
                    Grid.Row="1"
                    Margin="12"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                            <TextBlock Text="设置G值" 
                               Foreground="#FFFFFF"
                               Width="60"
                               Height="24"
                               FontSize="14"
                               TextAlignment="Center"/>
                            <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="#FFFFFF"
                        Margin="0 0 18 0"
                        Text="{Binding ElementName=gvalueslider_Scale, Path=Value, StringFormat={}{0}}" />
                            <Slider
                        x:Name="gvalueslider_Scale"
                         Width="250"
                        VerticalAlignment="Center"
                        IsMoveToPointEnabled="True"
                        IsSnapToTickEnabled="True"
                              Maximum="99"
                        Foreground="{DynamicResource SliderDefaultColor}"
                        Minimum="0"
                        SmallChange="1" 
                        Value="{Binding CurrentRedTone}"
                        PreviewMouseLeftButtonUp="gslider_PreviewMouseDown"
                        Thumb.DragDelta="gslider_DragDelta"/>
                        </StackPanel>

                        <StackPanel
                    Grid.Row="2"
                    Margin="12"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                            <TextBlock Text="设置B值" 
                               Foreground="#FFFFFF"
                               Width="60"
                               Height="24"
                               FontSize="14"
                               TextAlignment="Center"/>
                            <TextBlock
                         HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="#FFFFFF"
                        Margin="0 0 18 0"
                        Text="{Binding ElementName=bslider_Scale, Path=Value, StringFormat={}{0}}" />

                            <Slider
                        x:Name="bslider_Scale"
                         Width="250"
                        VerticalAlignment="Center"
                        IsMoveToPointEnabled="True"
                        IsSnapToTickEnabled="True"
                        Maximum="99"
                        Minimum="0"
                        SmallChange="1" 
                        Foreground="{DynamicResource SliderDefaultColor}"
                        Value="{Binding CurrentGreenTone}"
                        PreviewMouseLeftButtonUp="bslider_PreviewMouseDown"
                        Thumb.DragDelta="bslider_DragDelta"/>
                        </StackPanel>


                    </Grid>

                </Border>

                <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Button Width="120"  Grid.Row="1"  Height="40" Content="获取色彩参数" HorizontalAlignment="Left" VerticalAlignment="Center" Command="{Binding GetColorInfoCommand}" Style="{DynamicResource ButtonStyle}"/>
                    <Button Margin="120 0 0 0" Width="120"  Grid.Row="1" Grid.Column="1"  Height="40" Content="复位色彩参数" HorizontalAlignment="Left" VerticalAlignment="Center" Command="{Binding ResetColorInfoCommand}" Style="{DynamicResource ButtonStyle}"/>
                    <TextBlock Margin="120 0 0 0"  Grid.Row="1" Grid.Column="1" Foreground="Black" FontSize="16" Text="{Binding Tips,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </StackPanel>

                <ListBox    Grid.Column="3"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Margin="0 12"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Center"
                            ItemsSource="{Binding ColorSettingsList}"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                        <StackPanel
                                                    Orientation="Horizontal"
                                                    x:Name="bd"
                                                    Background="Transparent"
                                                    Cursor="Hand">
                                            <TextBlock
                                                                x:Name="txt_name"
                                                                Margin="5,0,0,0"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                FontSize="16"
                                                                Foreground="Black"
                                                                Text="{Binding ColorSettings}" />
                                        </StackPanel>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
            
        </Border>



    </Grid>
</Window>
