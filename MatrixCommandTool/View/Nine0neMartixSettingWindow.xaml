<Window x:Class="MatrixCommandTool.View.Nine0neMartixSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatrixCommandTool.View"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="clr-namespace:MatrixCommandTool.Controls"
        mc:Ignorable="d"
        Title="SetCommandWindow" Height="800" Width="1400"  Style="{StaticResource NoneWindowStyle_Radius}" WindowStartupLocation="CenterScreen"
        DataContext="{Binding Source={StaticResource Locator}, Path=NineOneMartixSettingVM}">
    <Grid x:Name="nineonegrid" Background="#224038">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Width="880"  
                   HorizontalAlignment="Left" 
                   Fill="Transparent"
                   Grid.ColumnSpan="2"
                   MouseMove="DragWindowMove"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="40" HorizontalAlignment="Right" Margin="10" Grid.Column="1">
            <controls:TitleSwitchButtonControl
                x:Name="switch"
                Width="50"
                Margin="0,0,16,0"
                VerticalAlignment="Center"
                Background="{DynamicResource SliderDefaultColor}"
                CheckedText="蜂鸣器开"
                DockPanel.Dock="Right"
                Foreground="#FFFFFF"
                Style="{StaticResource VerticalTitleSwitchButtonStyle}"
                UnCheckedText="蜂鸣器关" 
                IsChecked="{Binding IsOpenBuzzer}"
                Command="{Binding SwitchBuzzerCommand}" Cursor="Hand"/>

            <Button x:Name="changeskin" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Width="30" Height="30" Padding="0" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFFFFF" Click="changeskin_Click">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="menuBlue"  Header="夏日初恋" Click="menuAero_Click"/>
                    </ContextMenu>
                </Button.ContextMenu>
                <materialDesign:PackIcon Kind="Color" ToolTip="主题"/>
            </Button>
            <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Width="30" Height="30" Padding="0" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFFFFF" Click="WinMin_Click" Cursor="Hand">
                <materialDesign:PackIcon Kind="Minimize"/>
            </Button>
            <Button x:Name="ButtonClose" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Width="30" Height="30" Padding="0" Background="{x:Null}" Foreground="#FFFFFF" BorderBrush="{x:Null}" Click="ButtonClose_Click">
                <materialDesign:PackIcon Kind="Close"/>
            </Button>
        </StackPanel>
        <Grid VerticalAlignment="Top" Grid.Row="1" Grid.ColumnSpan="2" Margin="12 0 ">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <RadioButton
                            x:Name="rbtn_color"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Checked="rbtn_color_Checked"
                            GroupName="Tb"
                            IsChecked="{Binding IsCheckedColor}"
                            Content="色调及分辨率调整"
                            Height="50"
                            Style="{DynamicResource RadioButtonStyle}"/>
            <RadioButton
                            x:Name="rbtn_switch"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Checked="rbtn_switch_Checked"
                            GroupName="Tb"
                            Grid.Column="1"
                            IsChecked="{Binding IsCheckedSwitch}"
                            Content="输入输出切换"
                            Height="50"
                             Style="{DynamicResource RadioButtonStyle}"/>
            <RadioButton
                            x:Name="rbtn_EDID"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Checked="rbtn_EDID_Checked"
                            GroupName="Tb"
                            IsChecked="{Binding IsCheckedEDID}"
                            Content="EDID学习"
                            Height="50"
                            Style="{DynamicResource RadioButtonStyle}"
                            Grid.Column="2"/>
            <RadioButton
                            x:Name="rbtn_yuan"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Checked="rbtn_yuan_Checked"
                            GroupName="Tb"
                            IsChecked="{Binding IsCheckedScene}"
                            Content="预案场景"
                            Height="50"
                            Style="{DynamicResource RadioButtonStyle}"
                            Grid.Column="3"/>

            <RadioButton
                            x:Name="rbtn_signal"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Checked="rbtn_signal_Checked"
                            GroupName="Tb"
                            IsChecked="{Binding IsCheckedSignal}"
                            Content="信号设置"
                            Height="50"
                            Style="{DynamicResource RadioButtonStyle}"
                            Grid.Column="4"/>
            <RadioButton
                            x:Name="rbtn_seeting"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Checked="rbtn_seetingl_Checked"
                            GroupName="Tb"
                            IsChecked="{Binding IsCheckedSetting}"
                            Content="系统设置"
                            Height="50"
                            Style="{DynamicResource RadioButtonStyle}"
                            Grid.Column="5"/>
        </Grid>
        <Border Grid.Row="2"  Margin="12" Grid.ColumnSpan="2" >
            <TabControl
                    Margin="2,0,0,2"
                    Background="Transparent"
                    BorderThickness="1"
                BorderBrush="#ffffff">
                <TabItem  Header="ColorAdjust"
                    IsSelected="{Binding ElementName=rbtn_color,Path=IsChecked}"
                    Visibility="Collapsed">
                    <Border BorderBrush="#FFFFFF" BorderThickness="2" Width="1100" Height="300"  HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="250"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="3">
                                <TextBox x:Name="search" 
                             Width="200" 
                             Margin="6"
                             FontSize="16"
                             BorderBrush="#FFFFFF"
                             BorderThickness="1"
                             TextAlignment="Left"
                             Style="{StaticResource TextBoxStyle}"
                             Text="{Binding FindInstructionsStr,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                <Button Width="100" Height="30" 
                            Margin="10 0 0 0"
                            HorizontalAlignment="Center" 
                            Content="搜索" 
                                        Command="{Binding FindInstructionListCommand}"
                            Style="{DynamicResource ButtonStyle}"/>
                                <StackPanel Orientation="Horizontal" Margin="12">
                                    <CheckBox IsChecked="{Binding IsMutilCheck}"
                                  Width="20"
                                  Height="20"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  Content="{DynamicResource l_login_rememberpwd}"
                                  Cursor="Hand"
                                  Foreground="{DynamicResource SliderDefaultColor}"
                                  Style="{StaticResource CheckBoxDefaultStyle}"/>
                                    <TextBlock
                            FontSize="16"
                            Foreground="#FFFFFF"
                            Text="批量发送"
                            VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="批量发送间隔时长:" 
                               FontSize="16"  
                               Foreground="#FFFFFF"
                               Margin="12" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                                <TextBox Width="60"
                             Height="30"
                             BorderBrush="#FFFFFF"
                             BorderThickness="1"
                             Text="{Binding SendIntevar}"
                             Style="{StaticResource TextBoxStyle}"/>
                                <TextBlock Text="ms" 
                               Foreground="#FFFFFF"
                               FontSize="16"  
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                            </StackPanel>
                            <Border Grid.Row="1" BorderBrush="#FFFFFF" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid  Margin="12" Grid.Column="0">
                                        <ListBox
                            Margin="0,4"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding OutPutChannels}"

                            ScrollViewer.VerticalScrollBarVisibility="Disabled" SelectionMode="Multiple">
                                            <ListBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel />
                                                </ItemsPanelTemplate>
                                            </ListBox.ItemsPanel>
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="{x:Type ListBoxItem}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">

                                                                <StackPanel
                                                    Orientation="Horizontal"
                                                    x:Name="bd"
                                                    Height="48"
                                                    Background="Transparent"
                                                    Cursor="Hand">
                                                                    <CheckBox   IsChecked="{Binding IsCheckChannel}"
                                                                x:Name="selectCommand"
                                                                Width="40"
                                                                Height="40"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Center"
                                                                Cursor="Hand"
                                                                Foreground="#C0C4CC"
                                                                Style="{StaticResource CheckBoxDefaultStyle}"/>
                                                                    <TextBlock
                                                                x:Name="txt_name"
                                                                Margin="5,0,0,0"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                FontSize="16"
                                                                Foreground="Black"
                                                                Text="{Binding OnputChannel}" />
                                                                </StackPanel>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                        </ListBox>
                                    </Grid>
                                    <Grid Margin="12" Grid.Column="1">
                                        <ListBox
                            Margin="0,4"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding NineOneColorAdj}"

                            ScrollViewer.VerticalScrollBarVisibility="Disabled" SelectionMode="Multiple">
                                            <ListBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel />
                                                </ItemsPanelTemplate>
                                            </ListBox.ItemsPanel>
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="{x:Type ListBoxItem}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">

                                                                <StackPanel
                                                    Orientation="Horizontal"
                                                    x:Name="bd"
                                                    Height="48"
                                                    Background="Transparent"
                                                    Cursor="Hand">
                                                                    <CheckBox   IsChecked="{Binding IsCheckInstructions}"
                                                                x:Name="selectCommand"
                                                                Width="40"
                                                                Height="40"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Center"
                                                                Cursor="Hand"
                                                                Foreground="#C0C4CC"
                                                                Style="{StaticResource CheckBoxDefaultStyle}"/>
                                                                    <TextBlock
                                                                x:Name="txt_name"
                                                                Margin="5,0,0,0"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                FontSize="16"
                                                                        TextWrapping="Wrap"
                                                                Foreground="Black"
                                                                Text="{Binding Instructions}" />
                                                                </StackPanel>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                        </ListBox>
                                    </Grid>
                                </Grid>
                             
                            </Border>

                            <Button Grid.Column="1" Grid.Row="1"
                        Width="80"
                        Height="50"
                        Content="发送"
                        Command="{Binding SendColorAdjInstructionsCommand}"
                         Style="{DynamicResource ButtonStyle}"/>

                            <Border Grid.Row="1" Grid.Column="2" BorderBrush="#FFFFFF" BorderThickness="1">
                                <Grid Margin="12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock
                    FontSize="16"
                    Foreground="#FFFFFF"
                    Text="已发送命令" />
                                    <ListBox
                            Grid.Row="1"
                            Margin="0,4"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding SendColorAdjInstructionsList}"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            ScrollViewer.CanContentScroll="True">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="{x:Type ListBoxItem}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                            <StackPanel
                                                    Orientation="Horizontal"
                                                    x:Name="bd"
                                                    Height="48"
                                                    Background="Transparent"
                                                    Cursor="Hand">
                                                                <TextBlock
                                                                x:Name="txt_name"
                                                                Margin="5,0,0,0"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                FontSize="16"
                                                                Foreground="Black"
                                                                Text="{Binding Code}" />
                                                            </StackPanel>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                    </ListBox>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </TabItem>

                <TabItem Header="SwitchInput"
                         IsSelected="{Binding ElementName=rbtn_switch,Path=IsChecked}"
                         Visibility="Collapsed">
                    <Border BorderBrush="#FFFFFF" BorderThickness="2"  Height="300"  HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <DataGrid Background="Transparent" 
                                  HorizontalAlignment="Center"
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="False" 
                                  CanUserReorderColumns="False" 
                                  CanUserResizeRows="False"
                                  CanUserSortColumns="False" 
                                  AutoGenerateColumns="False" 
                                  SelectionMode="Single"
                                  BorderThickness="1"  
                                  RowHeaderWidth="0" 
                                  ItemsSource="{Binding PagesSource}" GridLinesVisibility="None">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                        <Setter Property="Padding" Value="18 0 0 0" />
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="FontSize" Value="16" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                                                    <Border BorderBrush="Transparent"
                                                        Margin="0"
                                                        BorderThickness="1 1 1 1"
                                                        Height="56"
                                                        Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}">
                                                        <Grid HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <ContentPresenter RecognizesAccessKey="True" VerticalAlignment="Center" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="输出设备" IsReadOnly="True" Width="100" Binding="{Binding OutputName}"/>
                                    <DataGridTemplateColumn Header="输入1" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Style="{DynamicResource ButtonStyle}"
                                                    Width="20" Height="20" HorizontalAlignment="Center" Margin="10 0 0 0"
                                                    Command="{Binding RelativeSource={RelativeSource AncestorType=local:Nine0neMartixSettingWindow,Mode=FindAncestor},Path=DataContext.SwitchOneCommand}"
                                                    CommandParameter="{Binding OutputName}" 
                                                    Cursor="Hand"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="输入2" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Style="{DynamicResource ButtonStyle}"
                                            Width="20" Height="20" HorizontalAlignment="Center" Margin="10 0 0 0"
                                            Command="{Binding RelativeSource={RelativeSource AncestorType=local:Nine0neMartixSettingWindow,Mode=FindAncestor},Path=DataContext.SwitchTwoCommand}"
                                            CommandParameter="{Binding OutputName}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="输入3" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Style="{DynamicResource ButtonStyle}"
                                            Width="20" Height="20" HorizontalAlignment="Center" Margin="10 0 0 0"
                                            Command="{Binding RelativeSource={RelativeSource AncestorType=local:Nine0neMartixSettingWindow,Mode=FindAncestor},Path=DataContext.SwitchThreeCommand}"
                                            CommandParameter="{Binding OutputName}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="输入4" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Style="{DynamicResource ButtonStyle}"
                                            Width="20" Height="20" HorizontalAlignment="Center" Margin="10 0 0 0"
                                            Command="{Binding RelativeSource={RelativeSource AncestorType=local:Nine0neMartixSettingWindow,Mode=FindAncestor},Path=DataContext.SwitchFourCommand}"
                                            CommandParameter="{Binding OutputName}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                </DataGrid.Columns>
                                <DataGrid.CellStyle>
                                    <Style TargetType="{x:Type DataGridCell}">
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                        <Setter Property="FontSize" Value="16"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                    <Border Padding="10" >
                                                        <ContentPresenter/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <MultiTrigger>
                                                <!-- 失去焦点时背景颜色 -->
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsSelected" Value="true"/>
                                                    <Condition Property="Selector.IsSelectionActive" Value="false"/>
                                                </MultiTrigger.Conditions>
                                                <Setter Property="Foreground" Value="White"/>
                                            </MultiTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </DataGrid.RowStyle>
                            </DataGrid>
                            <TextBlock Grid.Row="1" Text="*一个输入只能给一个输出" Foreground="Black" FontSize="20"/>
                        </Grid>
                        
                    </Border>
                </TabItem>

                <TabItem Header="EDID"
                         IsSelected="{Binding ElementName=rbtn_EDID,Path=IsChecked}"
                         Visibility="Collapsed">

                    <Border BorderBrush="#FFFFFF" BorderThickness="2" Width="1100" Height="300"  HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="450"/>
                            </Grid.ColumnDefinitions>

                            <Grid Margin="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="通     道" FontSize="16" Foreground="Black" />
                                <TextBlock Text="预     案" Grid.Column="1"  FontSize="16" Foreground="Black"/>
                                <ListBox
                            Margin="0,4"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding InputEdid}"
                            Grid.Row="1"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled" SelectionMode="Multiple">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListBoxItem}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">

                                                        <StackPanel
                                                    Orientation="Horizontal"
                                                    x:Name="bd"
                                                    Height="48"
                                                    Background="Transparent"
                                                    Cursor="Hand">
                                                            <CheckBox   IsChecked="{Binding IsCheckInstructions}"
                                                                x:Name="selectCommand"
                                                                Width="40"
                                                                Height="40"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Center"
                                                                Cursor="Hand"
                                                                Foreground="#C0C4CC"
                                                                Style="{StaticResource CheckBoxDefaultStyle}"/>
                                                            <TextBlock
                                                                x:Name="txt_name"
                                                                Margin="5,0,0,0"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                FontSize="16"
                                                                Foreground="Black"
                                                                Text="{Binding Instructions}" />
                                                        </StackPanel>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>

                                <ListBox
                                    Grid.Column="1"
                                    Grid.Row="1"
                            Margin="0,4"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding OutputEdid}"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled" SelectionMode="Multiple">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListBoxItem}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">

                                                        <StackPanel
                                                    Orientation="Horizontal"
                                                    x:Name="bd"
                                                    Height="48"
                                                    Background="Transparent"
                                                    Cursor="Hand">
                                                            <CheckBox   IsChecked="{Binding IsCheckInstructions}"
                                                                x:Name="selectCommand"
                                                                Width="40"
                                                                Height="40"
                                                                
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Center"
                                                                Cursor="Hand"
                                                                Foreground="#C0C4CC"
                                                                Style="{StaticResource CheckBoxDefaultStyle}"/>
                                                            <TextBlock
                                                                x:Name="txt_name"
                                                                Margin="5,0,0,0"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                FontSize="16"
                                                                Foreground="Black"
                                                                Text="{Binding Instructions}" />
                                                        </StackPanel>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>

                                <Button Grid.Column="0" 
                                    Grid.Row="2"
                                    Grid.ColumnSpan="2"
                        Width="200"
                        Height="50"
                        Content="发送"
                        Command="{Binding SendEdidInstructionsCommand}"
                         Style="{DynamicResource ButtonStyle}"/>
                               
                            </Grid>

                            <TextBlock Text="*选择n号EDID预案给到通道x" FontSize="16" Foreground="Black" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <Border Grid.Column="2" BorderBrush="#FFFFFF" BorderThickness="1">
                                <Grid Margin="12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Button 
                        Width="140"
                        Height="50"
                        Content="查询所有EDID预案"
                        Command="{Binding ScanAllEdidPlanCommand}"
                         Style="{DynamicResource ButtonStyle}"/>
                                    <ListBox
                            Grid.Row="1"
                            Margin="0,4"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding EDIDPlanList}"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            ScrollViewer.CanContentScroll="True">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="{x:Type ListBoxItem}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                            <StackPanel
                                                    Orientation="Horizontal"
                                                    x:Name="bd"
                                                    Background="Transparent"
                                                    Cursor="Hand">
                                                                <TextBlock
                                                                x:Name="txt_name"
                                                                Margin="5,0,0,0"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                FontSize="16"
                                                                Foreground="Black"
                                                                Text="{Binding EDEDIDInfo}" />
                                                            </StackPanel>
                                                        </ControlTemplate>
